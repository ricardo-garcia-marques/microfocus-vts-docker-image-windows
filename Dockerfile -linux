FROM ubuntu:20.04

ADD VTS_linux /opt/MF/VTS

WORKDIR /mnt/MF/VTS/web

COPY runVTS.sh .

ENV ADMIN_PORT=4000 \
    DEFAULT_API_PORT=8888 \
    ENABLE_DIAG=true \
    MAX_INSTANCES_ALLOWED=50 \
    AUTO_CREATE_INDEXED_COLUMN=true \
    USE_SSL=true \
    TLS_VERSION=auto \
    DEFAULT_LANGUAGE=en \
    LOGGER_LEVEL=error 

CMD [ "bash",".\\runVTS.sh" ]